{
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "build/typings",
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "storybook-static",
    "src/**/stories/**",
    "src/**/__mocks__/**",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
