    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-loader": "^8.2.1",
    "copyfiles": "^2.4.0",
    "css-loader": "^5.0.1",
    "dotenv": "^8.2.0",
