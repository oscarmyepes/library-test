    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0",
    "yalc": "^1.0.0-pre.47"
  },
  "scripts": {
    "build": "NODE_ENV=production node ./config/scripts/build.js",
    "rollup": "rollup",
    "dev": "yarn storybook",
    "lint": "eslint 'src/**/*.{ts,tsx}' && prettier --check 'src/**/*.{ts,tsx}'",
    "test": "jest --collectCoverage",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --detectOpenHandles",
    "prebuild": "rimraf build",
    "publish:npm": "yarn build && npm publish",
    "publish:local": "yarn build && yalc publish",
    "playground:esm": "yarn build && yalc publish && cd ./playground/esm && yarn && yarn yalc:add sunhammer-ui && yarn dev",
    "playground:umd": "rimraf playground/umd/build && yarn build && copyfiles build/** build/**/* playground/umd",
    "pre-commit-checks": "yarn lint && yarn jest --bail --findRelatedTests",
    "doc": "node ./config/scripts/createReadmeFile.js",
    "storybook": "start-storybook -p 6006",
    "storybook:export": "yarn doc && build-storybook -o ./docs",
    "storybook:deploy": "yarn storybook:export && firebase deploy"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn pre-commit-checks"
    ]
  },
  "main": "build/index.js",
  "module": "build/index.esm.js",
  "unpkg": "build/index.umd.js",
  "typings": "build/typings/index.d.ts",
  "style": "build/index.css",
  "files": [
    "build"
  ]
}
